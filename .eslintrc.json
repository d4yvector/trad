{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "semi": ["error", "never"],
        "comma-dangle": ["error", "never"],
        "no-use-before-define": ["error", { "functions": true, "classes": false }]
    }
}